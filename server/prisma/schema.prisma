generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(uuid())
  title     String
  notes     String?
  status    String   @default("todo")
  priority  String   @default("medium")
  dueAt     DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
